<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Test VercelPostgres</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="/login" class="btn btn-outline-light btn-sm">Iniciar Sesi√≥n</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Lista de Usuarios Registrados</h2>
            <a href="/registro" class="btn btn-primary">Nuevo Registro</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Estado (Activo)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (usuarios && usuarios.length> 0) { %>
                                <% usuarios.forEach(usuario=> { %>
                                    <tr>
                                        <td>
                                            <%= usuario.id %>
                                        </td>
                                        <td>
                                            <%= usuario.email %>
                                        </td>
                                        <td>
                                            <% if (usuario.activo) { %>
                                                <span class="badge bg-success">Activo</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="text-center py-4">
                                                    No hay usuarios registrados en la base de datos.
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="/" class="text-secondary text-decoration-none">Volver al Inicio</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>